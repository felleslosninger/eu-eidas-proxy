<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

    <!-- Country Code of this Proxy-Service -->
    <entry key="service.countrycode">NO</entry>

    <!--service Metadata -->
    <entry key="service.metadata.url">http://eidas-proxy:8082/ServiceMetadata</entry>

    <!-- ProxyService contact -->
    <entry key="service.contact.support.email">brukerstotte@digdir.no</entry>
    <entry key="service.contact.support.company">The Norwegian Digitalisation Agency</entry>


    <!-- ProxyService organization -->
    <entry key="service.organization.name">The Norwegian Digitalisation Agency</entry>
    <entry key="service.organization.displayname">The Norwegian Digitalisation Agency</entry>
    <entry key="service.organization.url">https://www.digdir.no/</entry>

    <!-- Eidas Node Service Metadata Single Sign On locations for ServiceMetadata-->
    <entry key="ssos.serviceMetadataGeneratorIDP.redirect.location">http://eidas-proxy:8082/ColleagueRequest</entry>
    <entry key="ssos.serviceMetadataGeneratorIDP.post.location">http://eidas-proxy:8082/ColleagueRequest</entry>

    <!-- SECURITY POLICY -->
    <!-- uri used for the CSP reporting feature-->
    <entry key="security.header.CSP.report.uri">http://eidas-proxy:8082/cspReportHandler</entry>

    <!-- value of the NodeCountry to be published in the metadata-->
    <entry key="metadata.node.country">NO</entry>

    <!-- Restrict metadata retrieval to https -->
    <entry key="metadata.restrict.http">false</entry>
    <!--URL for specific-proxyService requests receiver only needed when specific  -->
    <entry key="specific.proxyservice.request.receiver">http://idporten-proxy:8082/ProxyServiceRequest</entry>

    <entry key="node.metadata.not.signed.descriptors">https://dummy.no</entry>

    <entry key="eidas.protocol.version">1.3</entry>
    <entry key="service.LoA">http://eidas.europa.eu/LoA/high</entry>



</properties>
